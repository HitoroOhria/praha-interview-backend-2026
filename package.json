{
	"name": "my-app",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"lint": "biome check",
		"fix": "biome lint --write",
		"format": "biome format --write",
		"db:generate": "drizzle-kit generate --config=drizzle.config.ts --prefix=timestamp",
		"db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
		"db:test:migrate": "drizzle-kit migrate --config=drizzle-test.config.ts"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.9",
		"@hono/zod-validator": "^0.7.6",
		"@t3-oss/env-core": "^0.13.10",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.9",
		"mysql2": "^3.17.2",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.2",
		"@types/node": "^20.11.17",
		"drizzle-kit": "^0.31.9",
		"tsx": "^4.21.0",
		"typescript": "^5.8.3"
	}
}
